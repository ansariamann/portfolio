{
  "name": "modern-portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "ANALYZE=true npm run build",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --collect.numberOfRuns=1",
    "lighthouse:desktop": "lighthouse http://localhost:3000 --preset=desktop --output=html --output-path=./lighthouse-desktop.html",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --preset=mobile --output=html --output-path=./lighthouse-mobile.html",
    "performance:audit": "node scripts/performance-audit.js",
    "performance:monitor": "node scripts/performance-monitor.js",
    "performance:budget": "npm run build && npm run lighthouse:ci && node -e \"console.log('Performance budget check complete')\"",
    "performance:full": "npm run analyze:bundle && npm run performance:audit",
    "performance:ci": "npm run build && npm run lighthouse:ci && npm run analyze:bundle",
    "integration:test": "node scripts/integration-test.js",
    "accessibility:audit": "node scripts/accessibility-audit.js",
    "deploy:check": "npm run type-check && npm run lint && npm run test:ci && npm run build",
    "deploy:full": "npm run deploy:check && npm run performance:ci && npm run accessibility:audit",
    "export": "next export",
    "clean": "rm -rf .next out node_modules/.cache",
    "fresh-install": "npm run clean && npm install",
    "precommit": "npm run lint && npm run type-check",
    "prebuild": "npm run type-check"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@hookform/resolvers": "^5.2.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.9",
    "lucide-react": "^0.525.0",
    "next": "14.2.18",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.61.1",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.0.3",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@netlify/functions": "^4.2.1",
    "@next/bundle-analyzer": "^15.4.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.18",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
